{
  "meta": {
    "short_name": "helium",
    "title": "Helium",
    "author": "YesCourse Pty Ltd",
    "description": "A simple light weight theme - the default for YesCourse Courses"
  },
  "templates": {
    "academy-page": "academy-page.html",
    "home-page": "home-page.html",
    "bundle-page": "bundle-page.html",
    "course-page": "course-page.html",
    "module-page": "module-page.html",
    "lesson-page": "lesson-page.html",
    "sales-page": "sales-page.html",
    "blog-page": "blog-page.html",
    "course-thank-you-page": "course-thank-you-page.html",
    "user-config-css": "user-config.css",

    "404-page": "404.html",
    "-site-header": "site-header.html",
    "-site-footer": "site-footer.html",
    "-pre-banner": "pre-banner.html",
    "-banner": "banner.html",
    "-std-banner-text": "std-banner-text.html"
  },
  "extcss" : [
     "//fonts.googleapis.com/css?family=Open+Sans:400italic,400,700"
  ],
  "extjs" : [],
  "vars": {
    "header_background_color": {
      "type": "color",
      "default": "#000000"
    },
    "header_text_color": {
      "type": "color",
      "default": "#ffffff"
    },
    "banner_background_color": {
      "type": "color",
      "default": "#3C425C"
    },
    "banner_text_color": {
      "type": "color",
      "default": "#ffffff"
    },
    "banner_custom_text_background_color": {
      "type": "color",
      "default": "rgba(0,0,0,0.52)"
    },
    "background_color": {
      "type": "color",
      "default": "#ffffff"
    },
    "text_color": {
      "type": "color",
      "default": "#000000"
    },
    "link_text_color": {
      "type": "color",
      "default": "#247ca0"
    },
    "menu_background_color": {
      "type": "color",
      "default": "#4c4c54"
    },
    "menu_item_background_color": {
      "type": "color",
      "default": "#32323a"
    },
    "menu_text_color": {
      "type": "color",
      "default": "#ffffff"
    },
    "menu_selected_background_color": {
      "type": "color",
      "default": "#0999d6"
    },
    "menu_selected_text_color": {
      "type": "color",
      "default": "#000000"
    },
    "rego_button_background_color": {
      "type": "color",
      "default": "rgba(0,0,0,0.52)"
    }
  },
  "build_ui": {
    "sections": [
      {
        "name": "Colors",
        "levels": ["all"],
        "groups": [
          {
            "name": "Header & Footer",
            "fields": [
              {
                "var": "header_background_color",
                "label": "Header/Footer Background"
              },
              {
                "var": "header_text_color",
                "label": "Header/Footer Text"
              }
            ]
          },
          {
            "name": "Sales Page Banner",
            "levels": ["S"],
            "fields": [
              {
                "var": "banner_background_color",
                "label": "Banner Background"
              },
              {
                "var": "banner_text_color",
                "label": "Banner Text"
              },
              {
                "var": "banner_custom_text_background_color",
                "label": "Banner Custom Text Background"
              }
            ]
          }
        ]
      }
    ]
  },
  "images": [
    "account_setting.png", "default_pic_200.png", "download_button.png",
    "excel.png", "free_course_enrol.png", "lesson_icon.png", "lock.png",
    "mobile_icon.png", "next_slide_button.png", "pdf_icon.png",
    "player_small.png", "side_arrow.png", "user_icon.png", "clip.png",
    "default_pic.png", "dropdown.png", "file_icon.png", "last_slide_button.png",
    "lesson.png", "log_out.png", "modules_icon.png", "password.png",
    "play_button.png", "ppt.jpg", "speaker.png", "country.png",
    "delete_grey.png", "exam_passed_tick.png", "first_slide_button.png",
    "lesson_green_icon.png", "loading.gif", "mail_icon.png",
    "ms_docx.png", "pause_button.png", "player.png", "prev_slide_button.png",
    "timezone.png"
  ]
}
